{
  "name": "@luc4sguilherme/steam-tradeoffer-manager",
  "version": "1.0.1",
  "description": "A simple trade offers API for Steam",
  "license": "MIT",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint src/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luc4sguilherme/steam-tradeoffer-manager.git"
  },
  "author": "luc4sguilherme",
  "bugs": {
    "url": "https://github.com/luc4sguilherme/steam-tradeoffer-manager/issues"
  },
  "homepage": "https://github.com/luc4sguilherme/steam-tradeoffer-manager#readme",
  "files": [
    "src",
    "package.json",
    "package-lock.json",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@doctormckay/stdlib": "^2.10.0",
    "async": "^3.2.5",
    "fast-deep-equal": "^3.1.3",
    "file-manager": "^2.0.1",
    "languages": "^0.1.3",
    "steamcommunity": "^3.48.3",
    "steamid": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.5",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-editorconfig": "^4.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.1",
    "eslint-plugin-promise": "^6.4.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "semantic-release": "^22.0.12",
    "steam-totp": "^2.1.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "./scripts/bundle.sh"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "archive.zip",
              "label": "${nextRelease.gitTag}.zip",
              "name": "steam-tradeoffer-manager-${nextRelease.gitTag}.zip"
            }
          ]
        }
      ]
    ]
  }
}
